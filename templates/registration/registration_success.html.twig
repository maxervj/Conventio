{% extends 'base.html.twig' %}

{% block title %}Inscription réussie - Conventio{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .success-container {
            margin-top: 30px;
            margin-bottom: 30px;
        }
        .success-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }
        .card-header-custom {
            background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }
        .card-header-custom .success-icon {
            font-size: 5rem;
            margin-bottom: 1rem;
            animation: scaleIn 0.5s ease-out;
        }
        @keyframes scaleIn {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        .card-header-custom h1 {
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }
        .card-header-custom p {
            margin: 0;
            opacity: 0.95;
            font-size: 1.2rem;
        }
        .card-body-custom {
            padding: 3rem 2.5rem;
            text-align: center;
        }
        .email-box {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            border-left: 5px solid #2196f3;
            padding: 2rem;
            border-radius: 15px;
            margin: 2rem 0;
            box-shadow: 0 5px 15px rgba(33, 150, 243, 0.2);
        }
        .email-box i {
            font-size: 3rem;
            color: #2196f3;
            margin-bottom: 1rem;
        }
        .email-box h3 {
            color: #1976d2;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        .email-box .user-email {
            font-size: 1.3rem;
            font-weight: 600;
            color: #0d47a1;
            background-color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            display: inline-block;
            margin: 1rem 0;
        }
        .instructions {
            background-color: #fff3cd;
            border-left: 5px solid #ffc107;
            padding: 1.5rem;
            border-radius: 10px;
            margin: 2rem 0;
            text-align: left;
        }
        .instructions h4 {
            color: #f57c00;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        .instructions ol {
            margin-bottom: 0;
            padding-left: 1.5rem;
        }
        .instructions li {
            margin-bottom: 0.75rem;
            font-size: 1.05rem;
            color: #333;
        }
        .countdown {
            font-size: 1.1rem;
            color: #666;
            margin: 2rem 0 1rem 0;
        }
        .countdown strong {
            color: #667eea;
            font-size: 1.3rem;
        }
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 1rem 3rem;
            font-size: 1.2rem;
            font-weight: 600;
            color: white;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            text-decoration: none;
            display: inline-block;
            margin-top: 1rem;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }
        .info-note {
            background-color: #f0f0f0;
            padding: 1rem;
            border-radius: 10px;
            margin-top: 2rem;
            font-size: 0.95rem;
            color: #666;
        }
        .email-sent-notification {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
            border: 2px solid #28a745;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            box-shadow: 0 5px 20px rgba(40, 167, 69, 0.3);
            animation: slideDown 0.5s ease-out;
        }
        @keyframes slideDown {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .email-icon-animation {
            margin-bottom: 1rem;
        }
        .email-icon-animation i {
            font-size: 4rem;
            color: #28a745;
            animation: bounce 1s ease infinite;
        }
        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        .notification-title {
            color: #155724;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
        .notification-text {
            color: #155724;
            font-size: 1.1rem;
            margin: 0;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container success-container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card success-card">
                <div class="card-header-custom">
                    <div class="success-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h1>Inscription réussie !</h1>
                    <p>Votre compte a été créé avec succès</p>
                </div>
                <div class="card-body card-body-custom">
                    <div class="email-sent-notification">
                        <div class="email-icon-animation">
                            <i class="bi bi-send-check-fill"></i>
                        </div>
                        <h3 class="notification-title">
                            <i class="bi bi-check-circle-fill me-2"></i>Email envoyé avec succès !
                        </h3>
                        <p class="notification-text">Un email de confirmation vient d'être envoyé</p>
                    </div>

                    <div class="email-box">
                        <i class="bi bi-envelope-check-fill"></i>
                        <h3><i class="bi bi-exclamation-circle-fill me-2"></i>Vérifiez votre boîte mail</h3>
                        <p class="mb-2">L'email de confirmation a été envoyé à :</p>
                        <div class="user-email">
                            <i class="bi bi-envelope me-2"></i>{{ userEmail }}
                        </div>
                    </div>

                    <div class="instructions">
                        <h4><i class="bi bi-list-check me-2"></i>Étapes pour finaliser votre inscription :</h4>
                        <ol>
                            <li>
                                <strong>Ouvrez votre boîte mail</strong> et recherchez l'email de Conventio
                                <br><small class="text-muted">Pensez à vérifier vos spams/courriers indésirables si vous ne le trouvez pas</small>
                            </li>
                            <li>
                                <strong>Cliquez sur le lien de vérification</strong> contenu dans l'email
                            </li>
                            <li>
                                <strong>Connectez-vous</strong> à votre compte avec vos identifiants
                            </li>
                        </ol>
                    </div>

                    <div class="countdown">
                        Redirection automatique vers la page de connexion dans <strong id="countdown">10</strong> secondes...
                    </div>

                    <a href="{{ path('app_login') }}" class="btn btn-login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Aller à la page de connexion
                    </a>

                    <div class="info-note">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Important :</strong> Vous ne pourrez pas vous connecter tant que vous n'aurez pas vérifié votre adresse email.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Animation d'apparition de la notification
    window.addEventListener('load', () => {
        const notification = document.querySelector('.email-sent-notification');

        // Faire disparaître progressivement la notification après 5 secondes
        setTimeout(() => {
            notification.style.transition = 'opacity 1s ease, transform 1s ease';
            notification.style.opacity = '0';
            notification.style.transform = 'translateY(-20px)';

            // Retirer complètement l'élément après l'animation
            setTimeout(() => {
                notification.style.display = 'none';
            }, 1000);
        }, 5000);
    });

    // Compte à rebours et redirection automatique
    let seconds = 10;
    const countdownElement = document.getElementById('countdown');

    const countdownInterval = setInterval(() => {
        seconds--;
        countdownElement.textContent = seconds;

        if (seconds <= 0) {
            clearInterval(countdownInterval);
            window.location.href = "{{ path('app_login') }}";
        }
    }, 1000);
</script>
{% endblock %}
