<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conventio</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
<nav class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-indigo-50/60 border-b border-gray-200">
    <div class="container mx-auto px-4 h-16 flex items-center justify-between">
        <!-- Logo -->
        <a href="{{ path('app_home') }}" class="flex items-center gap-2 font-bold text-xl text-blue-600">
            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center text-white">
                C
            </div>
            <span>Conventio</span>
        </a>
        <!-- Navigation -->
        <nav class="flex items-center gap-3">
            {% if app.user %}
                <!-- User is logged in -->
                <div class="flex items-center gap-3">
                    <span class="text-gray-700 text-sm hidden sm:inline">
                        <svg class="inline h-5 w-5 text-blue-600 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                        </svg>
                        {{ app.user.userIdentifier }}
                    </span>
                    <form action="{{ path('app_logout') }}" method="post" class="inline">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition duration-200 flex items-center gap-2">
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                            </svg>
                            <span>Se déconnecter</span>
                        </button>
                    </form>
                </div>
            {% else %}
                <!-- User is not logged in -->
                <a href="{{ path('app_login') }}">
                    <button class="px-4 py-2 text-gray-700 hover:text-blue-600 bg-transparent border-none">Se connecter</button>
                </a>
                <a href="{{ path('app_register_student') }}">
                    <button class="px-4 py-2 border border-blue-600 text-blue-600 bg-transparent rounded hover:bg-blue-50 hidden sm:flex">S'enregistrer (Étudiant)</button>
                </a>
                <a href="{{ path('app_register_professor') }}">
                    <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">S'enregistrer (Professeur)</button>
                </a>
            {% endif %}
        </nav>
    </div>
</nav>


{% block body %}
    <div class="container mt-5"></div>
{% endblock %}

</body>
</html>
