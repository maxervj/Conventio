<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
</head>
<body class="email-body">
    <div class="email-container">
        <div class="email-header-info">
            <h1>{{ 'email.company_info_completed_title'|trans }}</h1>
        </div>

        <div class="email-content-info">
            <p>{{ 'email.greeting'|trans({'%name%': student.firstName ~ ' ' ~ student.lastName}) }}</p>

            <p>{{ 'email.company_info_completed_message'|trans }}</p>

            <div class="email-info-box-success">
                <strong>{{ 'company_info.company_name'|trans }}:</strong> {{ companyInfo.companyName }}<br>
                <strong>{{ 'company_info.email'|trans }}:</strong> {{ companyInfo.email }}<br>
                <strong>{{ 'company_info.supervisor_lastname'|trans }}:</strong> {{ companyInfo.supervisorLastName }} {{ companyInfo.supervisorFirstName }}
            </div>

            <p>{{ 'email.next_steps'|trans }}</p>

            <div class="email-footer-info">
                <p>{{ 'email.footer'|trans }}</p>
            </div>
        </div>
    </div>
</body>
</html>
