{% extends 'base.html.twig' %}

{% block title %}{{ 'company_info.' ~ error|trans }}{% endblock %}

{% block stylesheets %}
    <style>
        .container {
            max-width: 700px;
            margin: 100px auto;
            padding: 40px;
            text-align: center;
        }
        .error-icon {
            font-size: 80px;
            color: #dc3545;
            margin-bottom: 30px;
        }
        .error-box {
            background: #f8d7da;
            border: 2px solid #dc3545;
            border-radius: 8px;
            padding: 40px;
            margin: 20px 0;
        }
        h1 {
            color: #dc3545;
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .message {
            font-size: 1.1rem;
            color: #721c24;
            line-height: 1.6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="error-box">
            <div class="error-icon">âœ—</div>

            <h1>{{ 'company_info.' ~ error|trans }}</h1>

            <div class="message">
                {% if error == 'error_expired' %}
                    {{ 'company_info.error_expired'|trans }}
                {% elseif error == 'error_completed' %}
                    {{ 'company_info.error_completed'|trans }}
                {% else %}
                    {{ 'company_info.error_invalid'|trans }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
