{% extends 'base.html.twig' %}

{% block title %}{{ 'company_info.success_title'|trans }}{% endblock %}

{% block stylesheets %}
    <style>
        .container {
            max-width: 700px;
            margin: 100px auto;
            padding: 40px;
            text-align: center;
        }
        .success-icon {
            font-size: 80px;
            color: #28a745;
            margin-bottom: 30px;
        }
        .success-box {
            background: #d4edda;
            border: 2px solid #28a745;
            border-radius: 8px;
            padding: 40px;
            margin: 20px 0;
        }
        h1 {
            color: #28a745;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
        .message {
            font-size: 1.1rem;
            color: #155724;
            line-height: 1.6;
            margin: 20px 0;
        }
        .thanks {
            font-style: italic;
            margin-top: 30px;
            color: #155724;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="success-box">
            <div class="success-icon">âœ“</div>

            <h1>{{ 'company_info.success_title'|trans }}</h1>

            <div class="message">
                {{ 'company_info.success_message'|trans }}
            </div>

            <div class="thanks">
                {{ 'company_info.success_thanks'|trans }}
            </div>
        </div>
    </div>
{% endblock %}
