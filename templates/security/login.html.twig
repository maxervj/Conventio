{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="container mb-3">
            <div class="row">
                You are logged in as {{ app.user.userIdentifier }}
            </div>
            <div class="row">
                <form action="{{ path('app_logout') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                    <button class="btn btn-dark" type="submit">Logout</button>
                </form>
            </div>
        </div>
    {% endif %}
    <form method="post">
        <h1 class="text-2xl font-bold mb-6">Veuillez vous authentifier</h1>
        <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="email" required autofocus>
        <label for="inputPassword" class="block text-sm font-medium text-gray-700 mt-4">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        <button class="w-full mt-6 bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" type="submit">
            Se connecter
        </button>
    </form>
    <!-- Add password reset link -->
    <p class="mt-3">
        <a href="{{ path('app_forgot_password_request') }}">Forgot your password?</a>
    </p>
    <!-- Add registration link -->
    <p class="mt-2">
        Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">S'enregistrer</a>
    </p>
{% endblock %}
