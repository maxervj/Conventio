{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.title'|trans }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full">
            <!-- Card Container -->
            <div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-100">
                <!-- Header with Icon -->
                <div class="text-center mb-8">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-600 to-emerald-600 rounded-full mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                    </div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ 'reset_password.reset_title'|trans }}</h1>
                    <p class="text-gray-600">{{ 'reset_password.reset_subtitle'|trans }}</p>
                </div>

                <!-- Flash Messages -->
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-lg">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">{{ flash_error }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <!-- Password Requirements Info -->
                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6 rounded-r-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-blue-800 mb-2">{{ 'reset_password.password_requirements'|trans }}</h3>
                            <ul class="text-xs text-blue-700 space-y-1 list-disc list-inside">
                                <li>{{ 'reset_password.requirement_length'|trans }}</li>
                                <li>{{ 'reset_password.requirement_case'|trans }}</li>
                                <li>{{ 'reset_password.requirement_number'|trans }}</li>
                                <li>{{ 'reset_password.requirement_special'|trans }}</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Form -->
                {{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            {{ 'reset_password.new_password'|trans }}
                        </label>
                        {{ form_widget(resetForm.plainPassword.first, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition',
                                'placeholder': 'reset_password.new_password'|trans
                            }
                        }) }}
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            {{ 'reset_password.confirm_password'|trans }}
                        </label>
                        {{ form_widget(resetForm.plainPassword.second, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition',
                                'placeholder': 'reset_password.confirm_password'|trans
                            }
                        }) }}
                        {{ form_errors(resetForm.plainPassword.second) }}
                    </div>

                    <button type="submit"
                            class="w-full flex justify-center items-center px-6 py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-lg shadow-lg hover:from-green-700 hover:to-emerald-700 transform hover:scale-105 transition duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        {{ 'reset_password.reset_button'|trans }}
                    </button>
                {{ form_end(resetForm) }}

                <!-- Security Note -->
                <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                    <div class="flex items-start">
                        <svg class="h-5 w-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        <p class="ml-3 text-xs text-gray-600">
                            {{ 'reset_password.security_note'|trans }}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Additional Help -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    {{ 'reset_password.need_help'|trans }}
                    <a href="{{ path('app_contact') }}" class="text-blue-600 hover:text-blue-700 font-medium">{{ 'reset_password.support'|trans }}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
