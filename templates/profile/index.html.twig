{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Conventio{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-extrabold text-gray-900">Mon Profil</h1>
            <p class="mt-2 text-sm text-gray-600">Gérez vos informations personnelles et vos classes</p>
        </div>

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 bg-{{ label == 'error' ? 'red' : 'green' }}-50 border-l-4 border-{{ label == 'error' ? 'red' : 'green' }}-500 p-4 rounded-lg">
                    <p class="text-sm text-{{ label == 'error' ? 'red' : 'green' }}-700">{{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl p-6">
                    <div class="text-center">
                        <div class="mx-auto h-24 w-24 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
                            <svg class="h-14 w-14 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                        <h2 class="mt-4 text-xl font-bold text-gray-900">{{ user.firstName }} {{ user.lastName }}</h2>
                        <p class="text-sm text-gray-600">{{ user.email }}</p>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mt-2">
                            {% if user is instanceof('App\\Entity\\Professor') %}
                                Professeur
                            {% elseif user is instanceof('App\\Entity\\Student') %}
                                Étudiant
                            {% else %}
                                Tuteur
                            {% endif %}
                        </span>
                    </div>

                    <div class="mt-6 space-y-3">
                        <a href="{{ path('app_profile_edit') }}" class="block w-full text-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 transition duration-200">
                            Modifier mon profil
                        </a>
                        <a href="{{ path('app_profile_change_password') }}" class="block w-full text-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition duration-200">
                            Changer mon mot de passe
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Informations personnelles -->
                <div class="bg-white rounded-2xl shadow-xl p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Informations personnelles</h3>
                    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Prénom</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ user.firstName }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Nom</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ user.lastName }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Email</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ user.email }}</dd>
                        </div>
                        {% if user.birthDate %}
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Date de naissance</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ user.birthDate|date('d/m/Y') }}</dd>
                            </div>
                        {% endif %}
                    </dl>
                </div>

                {% if user is instanceof('App\\Entity\\Professor') %}
                    <!-- Classes du professeur -->
                    <div class="bg-white rounded-2xl shadow-xl p-6">
                        <h3 class="text-lg font-bold text-gray-900 mb-4">Mes Classes</h3>

                        {% if user.referentLevel %}
                            <div class="mb-4">
                                <h4 class="text-sm font-medium text-gray-500 mb-2">Classe référente</h4>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                    {{ user.referentLevel.levelName }}
                                </span>
                            </div>
                        {% endif %}

                        {% if user.taughtLevels|length > 0 %}
                            <div>
                                <h4 class="text-sm font-medium text-gray-500 mb-2">Classes enseignées</h4>
                                <div class="flex flex-wrap gap-2">
                                    {% for level in user.taughtLevels %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                            {{ level.levelName }}
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <p class="text-sm text-gray-500 italic">Aucune classe enseignée pour le moment</p>
                        {% endif %}
                    </div>

                    <!-- Conventions à signer -->
                    {% if conventions|length > 0 %}
                        <div class="bg-white rounded-2xl shadow-xl p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">Conventions à gérer</h3>
                            <div class="space-y-3">
                                {% for convention in conventions %}
                                    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition duration-200">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">
                                                    Convention - {{ convention.student.firstName }} {{ convention.student.lastName }}
                                                </p>
                                                <p class="text-xs text-gray-500 mt-1">
                                                    Créée le {{ convention.createdAt|date('d/m/Y') }}
                                                </p>
                                            </div>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                {% if convention.status == 'draft' %}bg-gray-100 text-gray-800
                                                {% elseif convention.status == 'pending_validation' %}bg-yellow-100 text-yellow-800
                                                {% elseif convention.status == 'validated' %}bg-green-100 text-green-800
                                                {% elseif convention.status == 'signed' %}bg-blue-100 text-blue-800
                                                {% else %}bg-purple-100 text-purple-800{% endif %}">
                                                {{ convention.status }}
                                            </span>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                {% elseif user is instanceof('App\\Entity\\Student') %}
                    <!-- Classes de l'étudiant -->
                    {% if user.levels|length > 0 %}
                        <div class="bg-white rounded-2xl shadow-xl p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">Mes Classes</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for level in user.levels %}
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                        {{ level.levelName }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <!-- Conventions de l'étudiant -->
                    {% if conventions|length > 0 %}
                        <div class="bg-white rounded-2xl shadow-xl p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">Mes Conventions</h3>
                            <div class="space-y-3">
                                {% for convention in conventions %}
                                    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition duration-200">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">
                                                    Convention de stage
                                                </p>
                                                <p class="text-xs text-gray-500 mt-1">
                                                    Créée le {{ convention.createdAt|date('d/m/Y') }}
                                                </p>
                                            </div>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                {% if convention.status == 'draft' %}bg-gray-100 text-gray-800
                                                {% elseif convention.status == 'pending_validation' %}bg-yellow-100 text-yellow-800
                                                {% elseif convention.status == 'validated' %}bg-green-100 text-green-800
                                                {% elseif convention.status == 'signed' %}bg-blue-100 text-blue-800
                                                {% else %}bg-purple-100 text-purple-800{% endif %}">
                                                {{ convention.status }}
                                            </span>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
