{% extends 'base.html.twig' %}

{% block title %}Gestion des formations - Conventio{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">

            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-4xl font-extrabold text-gray-900">Liste des formations</h1>
                <p class="mt-2 text-gray-600">Visualisez, ajoutez ou modifiez les formations utilisées dans le processus de signature des conventions.</p>
            </div>

            <!-- Bouton d'ajout -->
            <div class="flex justify-end mb-4">
                <a href="{{ path('app_formation_new') }}" class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white text-base font-bold rounded-lg shadow transition">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Nouvelle formation
                </a>
            </div>

            {% if formations|length > 0 %}
                <div class="grid md:grid-cols-2 gap-6">
                    {% for formation in formations %}
                        <div class="bg-white rounded-2xl shadow-xl overflow-hidden transition hover:shadow-2xl">
                            <div class="px-6 py-8 flex flex-col gap-6 sm:px-10">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-2 flex items-center">
                                        {{ formation.code }}
                                    </h3>
                                    <p class="text-gray-600">
                                        </span> <span class="text-gray-800">{{ formation.libelle }}</span>
                                    </p>
                                </div>
                                <div class="flex gap-3">
                                    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}"
                                       class="flex-1 flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 transition duration-200">
                                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                        Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <!-- No Formation Card -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                    <div class="px-6 py-12 sm:px-10 text-center">
                        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <h3 class="mt-4 text-xl font-medium text-gray-900">Aucune formation enregistrée</h3>
                        <p class="mt-2 text-gray-600">Ajoutez votre première formation pour commencer le paramétrage.</p>
                        <div class="mt-6">
                            <a href="{{ path('app_formation_new') }}"
                               class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 transition duration-200">
                                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                                </svg>
                                Nouvelle formation
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
